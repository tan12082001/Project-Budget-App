<div class="new-object-outer-container">
  <%= form_with model: @category, class: "new-category-form verticle-flex-display" do |form| %>
      <div class='form-fields'>
      <div class="field">
        <%= form.label :name %>
        <%= form.text_field :name, autofocus: true, autocomplete: "name", placeholder: "e.g. Foods" %>
      </div>

      <div class="field">
        <%= form.label :icon %>
        <%= form.text_field :icon, autofocus: true, autocomplete: "icon", placeholder: "e.g. https://source.unsplash.com/user/c_v_r/100x100" %>
      </div>
      </div>

      <div class="field save-outer">
        <%= form.submit "Save", class: "save-button" %>
      </div>
  <% end %>
</div>